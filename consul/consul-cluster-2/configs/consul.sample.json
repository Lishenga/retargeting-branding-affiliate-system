{
    "bind_addr": "{{ GetInterfaceIP \"eth0\" }}",
    "addresses": {
        "http": "\($snadress)",
        "grpc": "\($snadress)"
    },
    "data_dir": "/opt/consul",
    "datacenter": "our_dc",
    "retry_join": [
        "172.31.13.201"
    ],
    "ports": {
        "grpc": 8502,
        "http": 8500,
        "sidecar_max_port": 21005,
        "sidecar_min_port": 21000
    },
    "enable_central_service_config": true,
    "encrypt": "NAqHX3HUULRuxRPSdzFAQgxpnsXxgks1VeUj4XOP1JE=",
    "encrypt_verify_incoming": true,
    "encrypt_verify_outgoing": true,
    "verify_incoming": false,
    "verify_outgoing": true,
    "ca_file": "/opt/consul/configs/consul-agent-ca.pem",
    "auto_encrypt": {
        "tls": true
    },
    "services": [
        {
            "check": [
                {
                    "http": "http://\($snadress):8081/swagger-ui.html",
                    "id": "authenticationandauthorization-check",
                    "interval": "5s",
                    "method": "GET",
                    "timeout": "3s"
                }
            ],
            "connect": [
                {
                    "sidecar_service": [
                        {
                            "proxy": [
                                {
                                    "local_service_address": $snadress,
                                    "upstreams": [
                                        {
                                            "destination_type": "service",
                                            "destination_name": "affiliatesystem",
                                            "datacenter": "our_dc",
                                            "local_bind_address": $snadress,
                                            "local_bind_port": 1234
                                        },
                                        {
                                            "destination_type": "service",
                                            "destination_name": "retargetingandrebranding",
                                            "datacenter": "our_dc",
                                            "local_bind_address": $snadress,
                                            "local_bind_port": 1234
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            ],
            "id": "authenticationandauthorization-1",
            "name": "authenticationandauthorization",
            "port": 8081
        },
        {
            "check": [
                {
                    "http": "http://\($snadress):8083/swagger-ui.html",
                    "id": "retargetingandrebranding-check",
                    "interval": "5s",
                    "method": "GET",
                    "timeout": "3s"
                }
            ],
            "connect": [
                {
                    "sidecar_service": [
                        {
                            "proxy": [
                                {
                                    "local_service_address": $snadress
                                }
                            ]
                        }
                    ]
                }
            ],
            "id": "retargetingandrebranding-1",
            "name": "retargetingandrebranding",
            "port": 8083
        }
    ]
}